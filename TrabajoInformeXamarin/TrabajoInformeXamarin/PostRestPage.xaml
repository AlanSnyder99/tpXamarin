<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrabajoInformeXamarin.PostRestPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView x: Name="PostList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre, Apellido}" Detail="{Binding PuntosTotales, CantidadRespuestasCorrectas, CantidadMejorRespuesta}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>